{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "outDir": "dist",
      "rootDir": "src",
      "strict": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "baseUrl": "./src",
      "paths": {
        "@actions/*": ["actions/*"],
        "@scenes/*": ["scenes/*"],
        "@utils/*": ["utils/*"],
        "@config/*": ["config/*"],
        "@handlers/*": ["handlers/*"]
      }
    },
    "include": ["src"]
  }
  